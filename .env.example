# CBCT Segmentation Platform - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Backend Configuration
# ============================================

# Python configuration
PYTHONUNBUFFERED=1

# File upload limits
MAX_FILE_SIZE_MB=500

# Model paths
MODEL_PATH=/app/models

# API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# Frontend Configuration
# ============================================

# API URL for backend connection
REACT_APP_API_URL=http://localhost:8000

# Application settings
REACT_APP_NAME=CBCT Segmentation Platform
REACT_APP_VERSION=1.0.0

# ============================================
# Database Configuration (Future)
# ============================================
# Uncomment when implementing database

# DATABASE_URL=postgresql://user:password@localhost:5432/cbct_db
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Security Settings (Production)
# ============================================
# Uncomment for production deployment

# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Third-party Services (Future)
# ============================================
# Uncomment when integrating external services

# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ============================================
# Monitoring & Logging (Production)
# ============================================
# Uncomment for production monitoring

# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO
# ENABLE_METRICS=true

# ============================================
# Docker-specific Settings
# ============================================

# Docker Compose service names
BACKEND_SERVICE_NAME=backend
FRONTEND_SERVICE_NAME=frontend

# Volume names
UPLOADS_VOLUME=uploads
MODELS_VOLUME=models
